        <div class="panel-heading">
            <h3 class="panel-title">{{ _('Running course group promotions...') }}</h3>
        </div>
        <div class="panel-body">
            <iframe src="{{ path('admin_coursegroupmanagement_execute_promote_run') }}" frameborder="0" width="100%" height="400px"></iframe>
